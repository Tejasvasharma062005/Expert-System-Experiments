# Basic Sudoku Solver using CSP (Constraint Satisfaction Problem)
# Author: ChatGPT

def print_board(board):
    """Helper function to print the Sudoku board."""
    for i in range(9):
        if i % 3 == 0 and i != 0:
            print("-" * 21)
        for j in range(9):
            if j % 3 == 0 and j != 0:
                print("|", end=" ")
            print(board[i][j] if board[i][j] != 0 else ".", end=" ")
        print()
    print()


def find_empty(board):
    """Find an empty cell (with 0). Returns (row, col) or None if full."""
    for i in range(9):
        for j in range(9):
            if board[i][j] == 0:
                return i, j
    return None


def valid(board, num, pos):
    """Check if num can be placed at pos without violating Sudoku constraints."""
    row, col = pos

    # Check row
    if num in board[row]:
        return False

    # Check column
    if num in [board[i][col] for i in range(9)]:
        return False

    # Check 3x3 box
    box_x, box_y = col // 3, row // 3
    for i in range(box_y * 3, box_y * 3 + 3):
        for j in range(box_x * 3, box_x * 3 + 3):
            if board[i][j] == num:
                return False

    return True


def solve(board):
    """Use backtracking search (CSP approach) to solve the Sudoku puzzle."""
    find = find_empty(board)
    if not find:
        return True  # Solved
    row, col = find

    for num in range(1, 10):  # Domain = {1,...,9}
        if valid(board, num, (row, col)):
            board[row][col] = num  # Assign

            if solve(board):  # Recursive search
                return True

            board[row][col] = 0  # Backtrack

    return False


# Example Sudoku puzzle (0 means empty)
board = [
    [5, 3, 0, 0, 7, 0, 0, 0, 0],
    [6, 0, 0, 1, 9, 5, 0, 0, 0],
    [0, 9, 8, 0, 0, 0, 0, 6, 0],
    [8, 0, 0, 0, 6, 0, 0, 0, 3],
    [4, 0, 0, 8, 0, 3, 0, 0, 1],
    [7, 0, 0, 0, 2, 0, 0, 0, 6],
    [0, 6, 0, 0, 0, 0, 2, 8, 0],
    [0, 0, 0, 4, 1, 9, 0, 0, 5],
    [0, 0, 0, 0, 8, 0, 0, 7, 9]
]

print("Initial Sudoku Puzzle:")
print_board(board)

solve(board)

print("Solved Sudoku Puzzle:")
print_board(board)
